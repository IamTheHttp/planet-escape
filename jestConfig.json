{
  "modulePaths": [
    "<rootDir>/",
    "<rootDir>/src"
  ],
  "testRegex": "(/__tests__/.*|(\\.|/)(jest))\\.jsx?$",
  "transformIgnorePatterns": [
    "/node_modules/"
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!src/develop.js",
    "!src/.dll/*",
    "!src/polyfill/*.*",
    "!src/liveExample.js",
    "!src/index.js"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "node_modules/jarb/statics/jest/__mocks__/fileMock.js",
    "\\.(css|less|scss)$": "node_modules/jarb/statics/jest/__mocks__/styleMock.js"
  },
  "setupFiles": [
    "<rootDir>/src/polyfill/rAF.js"
  ],
  "bail": true
}