{
  "name": "planet-escape",
  "private": true,
  "version": "1.2.0",
  "description": "Planet escape! a game like no other",
  "scripts": {
    "build": "rollup -c",
    "test": "jest"
  },
  "oldScripts": {
    "init": "npm install && jarb init",
    "start": "jarb devServer --mode=development",
    "build": "jarb build",
    "build:dist": "NODE_ENV=production webpack --config=node_modules/jarb/webpack/webpackConfig.js && npm run cssnano",
    "build:docs": "rimraf ./docs/** && jsdoc -c ./jsdocs.conf.json -u ./tutorials -t ./node_modules/ink-docstrap/template -R readme.md -r ./src -d docs  && npm run build:liveExample",
    "build:clean": "rimraf ./dist/**",
    "build:liveExample": "NODE_ENV=liveExample RAW_FILE=1 ASSETS_PATH=/liveExample/ webpack --config=node_modules/jarb/webpack/webpackConfig.js",
    "analyze": "jarb analyze --analyzeBundle",
    "test": "jarb test --coverage",
    "tdd": "jarb test",
    "releasePatch": "release-it",
    "releaseMinor": "release-it minor",
    "releaseMajor": "release-it major",
    "karma": "NODE_ENV=karma npm run lint && karma start",
    "karma:watch": "NODE_ENV=karma npm run lint && karma start --autoWatch=true --singleRun=false",
    "cssnano": "if test -e ./dist/bundle.css; then cssnano ./dist/bundle.css ./dist/bundle.css; else echo 'no css file to minify'; fi",
    "lint": "eslint -c=./.eslint ./src __tests__ __karma__",
    "build:dist:raw": "NODE_ENV=production RAW_FILE=1 webpack --config=node_modules/jarb/webpack/webpackConfig.js && npm run cssnano",
    "build:dll": "NODE_ENV=dll webpack --config=node_modules/jarb/webpack/webpackConfig.js",
    "release": "jarb release"
  },
  "devDependencies": {
    "@rollup/plugin-image": "^2.1.0",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-url": "^6.1.0",
    "install": "^0.13.0",
    "jest-canvas-mock": "2.1.1",
    "npm": "^7.20.3",
    "rollup-plugin-scss": "^3.0.0",
    "sass": "^1.36.0",
    "webpack-bundle-analyzer": "^2.11.1"
  },
  "main": "dist",
  "dependencies": {
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-react": "^7.14.5",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/enzyme": "^3.10.9",
    "@types/jest": "^26.0.24",
    "@types/memoizee": "^0.4.6",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "bootstrap": "^3.3.7",
    "canvas": "^2.8.0",
    "core-js": "3.6.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "game-platform": "^2.0.0",
    "jest": "^27.0.6",
    "memoizee": "^0.4.12",
    "react": "16.8.2",
    "react-dom": "16.8.2",
    "rollup": "^2.55.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0"
  },
  "jsnext:main": "src",
  "module": "src"
}
